<Window x:Class="NUnit.Bug.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NUnit.Bug.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Command="{Binding ShowMessageCommand}" CommandParameter="Test Message" Content="Click Me" Width="100"/>
            <TextBlock Text="{Binding Message}" FontSize="16" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
